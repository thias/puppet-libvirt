<network>
  <name><%= @name -%></name>
  <%- if @bridge -%>
  <bridge name='<%= @bridge -%>' stp='on' delay='0'/>
  <%- end -%>
  <%- if @mac -%>
  <mac address='<%= @mac -%>'/>
  <%- end -%>
  <%- if @forward_mode -%>
  <forward mode='<%= @forward_mode -%>'<%-if @forward_dev -%> dev='<%= @forward_dev -%>'<%-end-%><%-if @forward_interfaces.empty? -%>/<%-end-%>>
  <%-  if !@forward_interfaces.empty? -%>
  <%-    @forward_interfaces.each do |dev| -%>
    <interface dev='<%= dev -%>'/>
  <%-    end -%>
  </forward>
  <%-  end -%>
  <%-end -%>
  <%-if @ip -%>
  <%-  @ip.each do |ip| -%>
  <ip<%-if ip['address']-%> address='<%=ip['address']-%>'<%-end-%><%-if ip['netmask']-%> netmask='<%=ip['netmask']-%>'<%-end-%><%-if ip['prefix']-%> prefix='<%=ip['prefix']-%>'<%-end-%>>
    <%- if ip['dhcp'] -%>
    <%- dhcp = ip['dhcp'] -%>
    <dhcp>
      <%-if dhcp['start'] and dhcp['end']-%>
      <range start='<%=dhcp['start']-%>' end='<%=dhcp['end']-%>'/>
      <%-end-%>
      <%-if dhcp['bootp_file']-%>
      <bootp file='<%= dhcp['bootp_file'] -%>'<%-if dhcp['bootp_server']-%> server='<%=dhcp['bootp_server']-%>'<%-end-%>/>
      <%-end-%>
    </dhcp>
    <%- end-%>
  </ip>
  <%-  end-%>
  <%-end-%>
</network>
